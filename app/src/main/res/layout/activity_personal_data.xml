<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.toby.mymaterialdemo.ui.activity.PersonalDataActivity">

    <include layout="@layout/common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/accent"
                android:orientation="vertical">

                <include
                    layout="@layout/border"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <LinearLayout
                    android:id="@+id/layoutAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:background="@drawable/selector_list_item"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="头像"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/ic_launcher" />

                </LinearLayout>

                <include
                    layout="@layout/border"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp" />

                <LinearLayout
                    android:id="@+id/layoutName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/selector_list_item"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="姓名"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxEms="15"
                        android:text="未填写"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/icon_me_item_arrow" />

                </LinearLayout>

                <include
                    layout="@layout/border"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp" />

                <LinearLayout
                    android:id="@+id/layoutNickName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/selector_list_item"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="昵称"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textNickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxEms="15"
                        android:text="未填写"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/icon_me_item_arrow" />

                </LinearLayout>

                <include
                    layout="@layout/border"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp" />

                <LinearLayout
                    android:id="@+id/layoutPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/selector_list_item"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="手机号码"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="未填写"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/icon_me_item_arrow" />

                </LinearLayout>

                <include
                    layout="@layout/border"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/accent"
                android:orientation="vertical">

                <include
                    layout="@layout/border"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <LinearLayout
                    android:id="@+id/layoutSex"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/selector_list_item"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="性别"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text="未填写"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/icon_me_item_arrow" />

                </LinearLayout>

                <include
                    layout="@layout/border"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp" />

                <LinearLayout
                    android:id="@+id/layoutAge"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/selector_list_item"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="年龄"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text="未填写"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/icon_me_item_arrow" />

                </LinearLayout>

                <include
                    layout="@layout/border"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp" />

                <LinearLayout
                    android:id="@+id/layoutAddress"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/selector_list_item"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="地址"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxEms="15"
                        android:text="未填写"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/icon_me_item_arrow" />

                </LinearLayout>

                <include
                    layout="@layout/border"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp" />

                <LinearLayout
                    android:id="@+id/layoutSignature"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/selector_list_item"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="个性签名"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textSignature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:ellipsize="end"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:text="未填写"
                        android:textColor="@color/deep_black"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/icon_me_item_arrow" />

                </LinearLayout>

                <include
                    layout="@layout/border"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
